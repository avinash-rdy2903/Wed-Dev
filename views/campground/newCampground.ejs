<%- include("../partials/header.ejs")%>
<div class="container mt-3 ">
	
		<h2>
		Add a new camp ground
		</h2>
		<form action="/campgrounds" method="POST" class="form-group">
			<input class="w-25 mb-3 form-control mx-auto" type="text" name="result[name]" placeholder="name">
			<input class="w-25 mb-3 form-control mx-auto" type="text" name="result[image]" placeholder="image url">
			<input class="w-25 mb-3 form-control mx-auto" type="number" min="0.01" step="0.01" name="result[price]" placeholder="Price">
			<input class="w-25 mb-3 form-control mx-auto" type="text" name="result[description]" placeholder="description">
			<button class="w-25 btn btn-primary mx-auto btn-block">submit!</button>
		</form>	
	
	
	<a class="mx-auto" href="/campgrounds">go back</a>
</div>



