<%- include("../partials/header.ejs")%>
<div class="container mt-3 ">
	
		<h2 >
		Edit <%=campground.name%>
		</h2>
		<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" class="form-group">
			<input class="w-25 mb-3 form-control mx-auto" type="text" name="result[name]" value="<%=campground.name%>">
			<input class="w-25 mb-3 form-control mx-auto" type="text" name="result[image]" value="<%=campground.image%>">
			<input class="w-25 mb-3 form-control mx-auto" type="number"min="0.01" step="0.01" name="result[price]" value="<%=campground.price%>">
			<input class="w-25 mb-3 form-control mx-auto" type="text" name="result[description]" value="<%=campground.description%>">
			<button class="w-25 btn btn-primary mx-auto btn-block">submit!</button>
		</form>	
	
	
	<a class="mx-auto" href="/campgrounds">go back</a>
</div>



<%-include("../partials/footer.ejs") %>